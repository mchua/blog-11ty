---
title: Articles
pagination:
  data: collections.blogPosts
  size: 10
  reverse: true
permalink: "/{% if pagination.pageNumber > 0 %}blog/{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<div class="heading">
  <h1>Articles</h1>
</div>

<div class="articles">
  <ul>
    {%- for item in pagination.items -%}
    <li>
      <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
      <time datetime="{{ item.date | w3c_date }}">{{ item.date | post_date }}</time>
    </li>
    {%- endfor -%}
  </ul>
</div>

<nav class="pagination" aria-labelledby="pagination">
  <h2 id="pagination" class="sr-only">Pagination</h2>
  <ol>
    <li>
    {%- if pagination.href.previous -%}
      <a href="{{ pagination.href.previous }}">Previous</a>
    {%- else -%}
      Previous
    {%- endif -%}
    </li>
    {%- for pageIndex in pagination | pagination_pages -%}
    {%- if pageIndex === -1 -%}
    <li>...</li>
    {%- else -%}
    <li><a href="{{ pagination.hrefs[ pageIndex ] }}"{% if page.url === pagination.hrefs[ pageIndex ] %} aria-current="page"{% endif %}><span class="sr-only">Page </span>{{ pageIndex + 1 }}</a></li>
    {%- endif -%}
    {%- endfor -%}
    <li>
    {%- if pagination.href.next -%}
      <a href="{{ pagination.href.next }}">Next</a>
    {%- else -%}
      Next
    {%- endif -%}
    </li>
  </ol>
</nav>